{
    "extends": [
      "config:base"
    ],
    "pip_requirements": {
        "fileMatch": ["requirements.txt"]
      },
    "packageRules": [
      {
        "updateTypes": [
          "minor",
          "patch"
        ],
        "automerge": true
      }
    ],
    "timezone": "Africa/Abidjan",
    "schedule": [
      "after 10pm every weekday",
      "before 5am every weekday",
      "every weekend"
    ]
  }